<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootpane" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MenuController">

<VBox alignment="CENTER" prefHeight="400" prefWidth="400" spacing="15">
   <children>
      <Button onAction="#handleRegister" minHeight="60.0" minWidth="220.0" mnemonicParsing="false" text="Register and update basestations">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleAnalyse" minHeight="60.0" minWidth="220.0" mnemonicParsing="false" text="Analyse data">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleSimulation" minHeight="60.0" minWidth="220.0" mnemonicParsing="false" text="Run simulation">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleSettings" minHeight="60.0" minWidth="220.0" mnemonicParsing="false" text="User manual">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleExit" minHeight="60.0" minWidth="220.0" mnemonicParsing="false" text="Exit">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
</AnchorPane>
