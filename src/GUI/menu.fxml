<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootpane" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MenuController">

<VBox alignment="CENTER" prefHeight="400" prefWidth="400" spacing="15">
   <children>
      <Button onAction="#handleRegister" minHeight="60.0" minWidth="200.0" mnemonicParsing="false" text="Register and update beacons">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleCalibrate" minHeight="60.0" minWidth="200.0" mnemonicParsing="false" text="Calibrate beacons">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleAnalyse" minHeight="60.0" minWidth="200.0" mnemonicParsing="false" text="Analyse data">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleExport" minHeight="60.0" minWidth="200.0" mnemonicParsing="false" text="Export data">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#handleSettings" minHeight="60.0" minWidth="200.0" mnemonicParsing="false" text="Settings / Manual">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
</AnchorPane>
