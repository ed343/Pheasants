<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="data_upload" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.UploadController">

    <VBox alignment="CENTER" prefHeight="550" prefWidth="600" spacing="30">
        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

        <VBox>
            <Label text="Please upload a file for every beacon, containing its observations.">
                <font><Font size="14.0"/></font>
            </Label>
            <Label text="Note: files should be in .txt or .csv format.">
                <font><Font size="14.0"/></font>
            </Label>
        </VBox>

        <HBox spacing="5">
            <Label text="   Beacon #1 data:"><font><Font size="14.0"/></font></Label>

            <Button fx:id="data1" onAction="#handleUpload" minHeight="30.0" minWidth="120.0" mnemonicParsing="false" text="Choose file...">
            <font>
                <Font size="14.0" />
            </font>
            </Button>
        </HBox>

        <HBox spacing="5">
            <Label text="   Beacon #2 data:"><font><Font size="14.0"/></font></Label>

            <Button fx:id="data2" onAction="#handleUpload" minHeight="30.0" minWidth="120.0" mnemonicParsing="false" text="Choose file...">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>

        <HBox spacing="5">
            <Label text="   Beacon #3 data:"><font><Font size="14.0"/></font></Label>

            <Button fx:id="data3" onAction="#handleUpload" minHeight="30.0" minWidth="120.0" mnemonicParsing="false" text="Choose file...">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT">
            <Button fx:id="run" onAction="#handleRun" minHeight="50.0" minWidth="180.0" mnemonicParsing="false" text="Run">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
        <ImageView id="boxImage">
        </ImageView>

    </VBox>

</AnchorPane>
